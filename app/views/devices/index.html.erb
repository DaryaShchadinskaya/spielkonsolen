<h1 class="text-center mt-4">This is the homepage with devices for users</h1>

<% if (@devices) %>
  <% if (@devices.empty?) %> 
   <h5 class="text-center">No devices found</h5>
  <% else %>
<div class="text-center flickr_pagination">
  <%= will_paginate @device, :container => false %>
  </div>

<div class="container">

  <% @device.each do |device| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">          
          <div class="card-body">
            <h5 class="card-title"><%= device.name %></h5>
              <div class="form-group row">
               <div class="field">
                <% if device.image.attached? %>
                  <%= image_tag (device.image), style: "width: 500px" %>  
                <% else %>
                  <%= image_tag("default_image.jpg", :size => "360x280", :crop => :fill) %>
                <% end %>       
              </div>              
                 <h5 class="card-title">Price for 1 day: <%= device.price %> $</h5>           
                <%= link_to 'View details', device_url(device), class: "btn btn-outline-success" %> |        
               <%= button_to "Book device", order_items_path(:device_id => device.id) %>          
            </div>
            </div>
          </div>
        </div>
    <% end %>
   </div>
  <% end %>
 <% end %>

<div class="text-center flickr_pagination">
  <%= will_paginate @device, :container => false %>
</div>
