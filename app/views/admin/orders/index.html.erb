<h1 class="text-center mt-4">[Admin] Booking orders list</h1>
<% if (@orders) %>
    <% if (@orders.empty?) %> 
     <h5 class="text-center">No orders found</h5>
    <% else %>
    <div class="text-center flickr_pagination">
      <%= will_paginate @order, :container => false %>
    </div>    
      <table class="table table-sm table-dark">
        <thead>
          <tr>
            <th scope="col">Number of order</th>
            <th scope="col">Customer Email</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Total price</th>
            <th scope="col">Delivery method</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>            
              <td><%= order.id %></td>
              <td><%= order.email %></td>
              <td><%= truncate(order.description, length: 500) %></td>
              <td><%= truncate(order.equipment, length: 500)  %></td>
              <td><%= order.price %></td>
              <td><%= link_to 'Details', admin_order_url(order), class: "btn btn-outline-primary" %></td>    
          </tr>
        </tbody>
      </table>
        <% end %>
        </tbody>
      </table>    
  <% end %>
<% end %>


