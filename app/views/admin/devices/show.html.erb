
<h1 class="text-center mt-4">Showing device details</h1>

<h2 class="text-center mt-4"><%= @device.name %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
        </div>
        <div class="card-body">
         <%= image_tag @device.image, width: "500px" if @device.image.attached? %>   
          <div class="card-text text-center"><%= simple_format(@device.description) %></div>
          <div class="card-text text-center"><%= simple_format(@device.complectation) %></div>
          <div class="card-text text-center"><%= @device.price %></div>

          <%= link_to "Edit", edit_admin_device_path(@device), class: "btn btn-outline-info" %>
          <%= link_to "Delete", admin_device_path(@device), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
         
        </div>
      </div>
    </div>
  </div>
</div>