
<h1 class="text-center mt-4">Showing device details</h1>

<h2 class="text-center mt-4"><%= @device.name %></h2>

<div class="card-text text-center"><b><h4>Status: </h4></b></div>
<div class="card-text text-center">

    <%= button_to "Delete",
          update_status_admin_device_path(@device),
          method: :patch, 
          form: { data: { confirm: "Are you sure?" } },
          class: "btn btn-danger" %>
</div>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
        </div>
        <div class="card-body">     
                <% if @device.image.attached? %>
                <%= image_tag (@device.image), style: "width: 500px" %>  
                <% else %>
                <%= image_tag("default_image.jpg", :size => "360x280", :crop => :fill) %>
                <% end %>   
                <div class="card-text text-center"><b><h4>Description: </h4></b><%= @device.description %></div>
                <div class="card-text text-center"><b><h4>Equipment: </h4></b><%= @device.equipment %></div>
                <div class="card-text text-center"><b><h4>Price for 1 day: </h4></b><%= @device.price %> $</div>
          <%= link_to "Edit", edit_admin_device_path(@device), class: "btn btn-outline-info" %>
          <%= link_to "Delete", admin_device_path(@device), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>         
        </div>
      </div>
    </div>
  </div>
</div>
