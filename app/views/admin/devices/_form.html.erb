<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @device %>
      <%= form_with(model: [:admin, @device], class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="form-group mb-3">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of console" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 5, class: "form-control shadow rounded", placeholder: "Description of console" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :complectation, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :complectation, rows: 5, class: "form-control shadow rounded", placeholder: "Complectation of console" %>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :price, style: "display: block" %>
          <%= f.text_field :price, class: 'form-control form-control-lg', placeholder: "Price per day, $" %>          
        </div>

       <div class="form-group mb-3">
         <%= f.label :image, class: "col-2 col-form-label text-light" %>
              <% if @device.image.attached? %>
                <%= image_tag @device.image, width: "500px" %>  
                <%= link_to "Delete image", purge_image_admin_device_path(@device), method: :delete %>             
               <% end %>                 
          <%= f.file_field :image, class: "form-control" %>
        </div>

        <div class="form-group row justify-content-center"> 
          <%= f.submit "Submit", :class => 'btn btn-outline-light btn-lg' %>     
        </div>
      <% end %>
    </div>
   <%= link_to "Cancel", admin_devices_path, data: { confirm: 'Are you sure?' } %>

  </div>
</div> 


  
