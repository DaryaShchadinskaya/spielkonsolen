<div class="container">
  <% @device.each do |device| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">          
          <div class="card-body">
            <h5 class="card-title"><%= link_to device.name, admin_device_url(device), class: "text-success" %></h5>
              <div class="form-group row">

               <div class="field">
                <% if device.image.attached? %>
                <%= image_tag (device.image), style: "width: 500px" %>  
                <% else %>
                <%= image_tag("default_image.jpg", :size => "360x280", :crop => :fill) %>
                <% end %>       
              </div>  
                <p class="card-text"><%= truncate(device.description, length: 500) %></p>
                <li class="card-title">Equipment: <%= truncate(device.equipment, length: 500) %></li>
                <li class="card-title">Price for 1 day: <%= device.price %> $</li>
        
                <%= link_to 'View details', admin_device_url(device), class: "btn btn-outline-success" %>                
                <%= link_to 'Edit', edit_admin_device_path(device), class: "btn btn-outline-info" %>
                <%= link_to 'Delete', admin_device_path(device), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %> 
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>